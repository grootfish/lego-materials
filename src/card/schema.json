{
  "$id":"lego-card",
  "type": "object",
  "title": "卡片组件设置",
  "required": [
    "title",
    "disHover",
    "bordered",
    "padding"
  ],
  "properties": {
    "title": {
      "type": "string",
      "title": "卡片头部Title",
      "default": "",
      "examples": [
        "卡片展示"
      ],
      "pattern": "^(.*)$"
    },
    "disHover": {
      "type": "boolean",
      "title": "是否hover展示阴影",
      "default": false,
      "examples": [
        false
      ]
    },
    "bordered": {
      "type": "boolean",
      "title": "是否展示边框",
      "default": true,
      "examples": [
        true
      ]
    },
    "padding": {
      "type": "number",
      "title": "卡片内边距",
      "default": 16,
      "examples": [
        16
      ]
    }
  }
}
